<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background_panel_1"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Đổi Mật Khẩu"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="15dp"
        android:textColorHint="#fff">

        <EditText
            android:id="@+id/edtUser3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/background_editext"
            android:drawableLeft="@drawable/u"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:enabled="false"
            android:focusedByDefault="false"
            android:hint="UserName"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#fff"
        android:minHeight="15dp"
        android:textColorHint="#fff">

        <EditText
            android:id="@+id/edtPass3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/background_editext"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:focusedByDefault="false"
            android:hint="PassWord"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#fff"
        android:minHeight="15dp"
        android:textColorHint="#fff">

        <EditText
            android:id="@+id/edtPass4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/background_editext"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="15dp"
            android:drawableTint="#fff"
            android:focusedByDefault="false"
            android:hint="Nhập lại mật khẩu"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:text="Đổi Mật Khẩu"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_button1"
            android:text="Hủy"
            android:textColor="@color/colorbg"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>